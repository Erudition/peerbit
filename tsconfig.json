{
    "include": [
        "packages/*/src"
    ],
    "exclude": [
        "node_modules",
        "packages/*/node_modules"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ES2022",
        "moduleResolution": "Node16",
        "esModuleInterop": true,
        "noEmit": true,
        "declaration": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "stripInternal": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@dao-xyz-types"
        ],
        "skipLibCheck": true,
    },
    "typedocOptions": {
        "entryPoints": ".",
        "entryPointStrategy": "packages",
        "out": "docs",
        "readme": "README.md"
    },
    "files": [
        "global.d.ts"
    ]
}