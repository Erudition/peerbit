        "ipfs-core-types": "^0.10.3",
        "jest": "^28.1.3",
        "json": "^11.0.0",
        "lerna": "^5.4.3",
        "patch-package": "^6.4.7",
        "prettier": "^2.7.1",
        "shx": "^0.3.4",
        "start-server-and-test": "^1.14.0",
        "ts-jest": "^28.0.8",
        "tslib": "^2.4.0",
        "typedoc": "^0.22.10",
        "typescript": "~4.4.4",
        "typescript-esm": "^2.0.0"
    }
}