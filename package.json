{
    "private": true,
    "name": "@dao-xyz/peerbit",
    "author": "dao.xyz",
    "repository": "https://github.com/@dao-xyz/sdk",
    "license": "Apache-2.0",
    "type": "module",
    "workspaces": {
        "packages": [
            "packages/ipfs/ipfs-pubsub-direct-channel",
            "packages/ipfs/ipfs-pubsub-peer-monitor",
            "packages/ipfs/ipfs-log",
            "packages/client",
            "packages/acl/dynamic-access-controller",
            "packages/acl/trust-web",
            "packages/identity/keystore",
            "packages/utils/crypto",
            "packages/store/orbit-db-bdocstore",
            "packages/store/orbit-db-query-store",
            "packages/store/orbit-db-string",
            "packages/store/query-protocol",
            "packages/store/orbit-db-store",
            "packages/utils/io-utils",
            "packages/utils/test-utils",
            "packages/utils/bpayload",
            "packages/utils/cache",
            "packages/utils/borsh-utils",
            "packages/utils/time"
        ],
        "nohoist": [
            "**/@babel/preset-env",
            "**/@babel/preset-env/**",
            "**/babel-loader",
            "**/babel-loader/**",
            "**/webpack",
            "**/webpack/**"
        ]
    },
    "engines": {
        "node": ">=16.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "clean": "lerna run clean",
        "build": "lerna run build",
        "test": "node ./node_modules/.bin/jest test  -c jest.config.unit.ts --runInBand --forceExit",
        "test:integration": "node ./node_modules/.bin/jest test -c jest.config.integration.ts --runInBand --forceExit",
        "deploy": "yarn deploy:docs && yarn deploy:example",
        "deploy:docs": "yarn docs && gh-pages --dist docs --dotfiles",
        "docs": "shx rm -rf docs && NODE_OPTIONS=--max_old_space_size=8192 typedoc && shx cp ./{.nojekyll} docs/",
        "fmt": "prettier --write '{*,**/*}.{js,ts,jsx,tsx,json,vue}'",
        "lint": "eslint --ext .ts . && prettier --check '{*,**/*}.{js,ts,jsx,tsx,json,vue}'",
        "lint:fix": "eslint --fix --ext .ts . && yarn fmt",
        "nuke": "shx rm -rf {.,packages/*/*}/{node_modules,yarn.lock}",
        "postinstall": "patch-package"
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.18.9",
        "@types/eslint": "^8.2.1",
        "@types/eslint-plugin-prettier": "^3.1.0",
        "@types/jest": "^27.0.2",
        "@types/node": "^17.0.32",
        "@types/prettier": "^2.4.2",
        "@typescript-eslint/eslint-plugin": "^5.6.0",
        "@typescript-eslint/parser": "^5.6.0",
        "@types/rimraf": "^3.0.2",
        "@types/fs-extra": "^9.0.13",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-react-app": "^7.0.0",
        "eslint-plugin-prettier": "^4.0.0",
        "gh-pages": "^4.0.0",
        "dotenv": "^16.0.3",
        "ipfs-core-types": "^0.12.1",
        "jest": "^29.1.2",
        "jest-extended": "^3.1.0",
        "json": "^11.0.0",
        "lerna": "^5.5.1",
        "patch-package": "^6.4.7",
        "prettier": "^2.7.1",
        "shx": "^0.3.4",
        "start-server-and-test": "^1.14.0",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "tslib": "^2.4.0",
        "typedoc": "^0.22.10",
        "typescript": "^4.8.4",
        "typescript-esm": "^2.0.0",
        "rimraf": "^3.0.2",
        "fs-extra": "^10.1.0"
    }
}