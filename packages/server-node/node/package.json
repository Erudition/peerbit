{
    "name": "@dao-xyz/peerbit-node",
    "version": "0.0.65",
    "author": "dao.xyz",
    "repository": "https://github.com/@dao-xyz/peerbit-node",
    "license": "Apache-2.0",
    "type": "module",
    "sideEffects": false,
    "bin": {
        "peerbit": "./lib/esm/bin.js"
    },
    "module": "lib/esm/index.mjs",
    "types": "lib/esm/index.d.ts",
    "exports": {
        "import": "./lib/esm/index.mjs"
    },
    "files": [
        "lib",
        "src",
        "src/nginx-template.conf",
        "!src/**/__tests__",
        "!lib/**/__tests__",
        "LICENSE"
    ],
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=16.0"
    },
    "scripts": {
        "clean": "shx rm -rf lib/*",
        "build": "yarn clean && tsc -p tsconfig.json && tsc-esm -p tsconfig.json && yarn build-ui",
        "build-ui": "cd ../frontend && yarn build-prod && cd ../node",
        "postbuild": "cp src/nginx-template.conf lib/esm/ && echo '{\"type\":\"module\"} ' | node ../../../node_modules/.bin/json > lib/esm/package.json && cp -r ../frontend/build lib/ui",
        "test": "node ../../../node_modules/.bin/jest test  -c  ../../../jest.config.ts --runInBand --forceExit",
        "test:unit": "node ../../../node_modules/.bin/jest test  -c  ../../../jest.config.unit.ts --runInBand --forceExit",
        "test:integration": "node ../node_modules/.bin/jest test -c  ../../../jest.config.integration.ts --runInBand --forceExit"
    },
    "devDependencies": {
        "@dao-xyz/peerbit-node-test-lib": "^0.0.1",
        "@dao-xyz/peerbit-string": "^0.0.119",
        "@dao-xyz/peerbit-test-utils": "^0.0.13",
        "@types/yargs": "^17.0.13",
        "aws-sdk": "^2.1259.0",
        "axios": "^1.1.3",
        "dotenv": "^16.0.3",
        "go-ipfs": "^0.17.0",
        "ipfs": "^0.65.0",
        "yargs": "^17.6.0"
    },
    "dependencies": {
        "@aws-sdk/client-route-53": "^3.216.0",
        "@dao-xyz/peerbit": "^0.0.68",
        "ipfsd-ctl": "^12.2.2",
        "is-node": "^1.0.2"
    },
    "peerDependencies": {
        "axios": "^1.1.3",
        "go-ipfs": "^0.17.0",
        "ipfs": "^0.65.0",
        "yargs": "^17.6.0"
    }
}
