{
  "name": "@dao-xyz/peerbit-node",
  "version": "0.0.23",
  "author": "dao.xyz",
  "repository": "https://github.com/@dao-xyz/dsocial",
  "license": "Apache-2.0",
  "type": "module",
  "sideEffects": false,
  "bin": {
    "peerbit": "./lib/esm/bin.js"
  },
  "module": "lib/esm/index.mjs",
  "types": "lib/esm/index.d.ts",
  "exports": {
    "import": "./lib/esm/index.mjs"
  },
  "files": [
    "lib",
    "src",
    "src/nginx-template.conf",
    "!src/**/__tests__",
    "!lib/**/__tests__",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.0"
  },
  "scripts": {
    "clean": "shx rm -rf lib/*",
    "build": "yarn clean && tsc -p tsconfig.json; tsc-esm -p tsconfig.json",
    "postbuild": "cp src/nginx-template.conf lib/esm/ && echo '{\"type\":\"module\"} ' | node ../../node_modules/.bin/json > lib/esm/package.json",
    "test": "node ../../node_modules/.bin/jest test  -c  ../../jest.config.ts --runInBand --forceExit",
    "test:unit": "node ../../node_modules/.bin/jest test  -c  ../../jest.config.unit.ts --runInBand --forceExit",
    "test:integration": "node ../node_modules/.bin/jest test -c  ../../jest.config.integration.ts --runInBand --forceExit"
  },
  "devDependencies": {
    "@types/yargs": "^17.0.13",
    "axios": "^1.1.3",
    "dotenv": "^16.0.3",
    "go-ipfs": "^0.16.0",
    "ipfs": "^0.65.0",
    "mz": "^2.7.0",
    "shx": "^0.3.3",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4",
    "yaml": "^1.10.2",
    "yargs": "^17.6.0"
  },
  "dependencies": {
    "@dao-xyz/peerbit": "^0.0.37",
    "ipfsd-ctl": "^12.2.2",
    "is-node": "^1.0.2"
  },
  "peerDependencies": {
    "axios": "^1.1.3",
    "go-ipfs": "^0.16.0",
    "ipfs": "^0.65.0",
    "yargs": "^17.6.0"
  }
}